<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFBE9">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnviar"
        android:layout_marginBottom="-1dp"
        android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logoPizzaria"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_pizzaria" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/fundo"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Dados do Cliente"
                    android:textAlignment="center"
                    android:textColor="#022D05"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/etNomeCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/caixa_texto"
                    android:hint="Nome do Cliente"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/etTelefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caixa_texto"
                    android:hint="Telefone de Contato"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/fundo"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Pedido"
                    android:textAlignment="center"
                    android:textColor="#022D05"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Tipo de Pizza"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <Spinner
                    android:id="@+id/spTipoPizza"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/caixa_texto"
                    android:padding="8dp"
                    android:textColor="#000000" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="• Tipo de Borda"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <Spinner
                    android:id="@+id/spTipoBorda"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:background="@drawable/caixa_texto"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="• Sabor"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etSabor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/caixa_texto"
                    android:hint="Ex: calabresa com queijo"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="• Opcionais"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <CheckBox
                    android:id="@+id/cbQueijoExtra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Queijo extra" />


                <CheckBox
                    android:id="@+id/cbSemGluten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Sem glúten" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:background="@drawable/fundo"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Instruções para entrega"
                    android:textAlignment="center"
                    android:textColor="#022D05"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/etRua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/caixa_texto"
                    android:hint="Rua"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etNumero"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/caixa_texto"
                        android:hint="Número"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="#979797"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/etBairro"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/caixa_texto"
                        android:hint="Bairro"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#979797"
                        android:padding="8dp" />

                    <Spinner
                        android:id="@+id/spCidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/caixa_texto"
                        android:textColor="#000000"
                        android:textColorHint="#979797"
                        android:padding="8dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etObservacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/caixa_texto"
                    android:gravity="top|start"
                    android:hint="Observação"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Fazer Pedido"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E63946"
        android:layout_margin="20dp"
        android:padding="14dp"/>
</RelativeLayout>
